extends layout

block content
    a.btn.btn-warning(href='/') Back
    br
    br
    h1= article.title
    h5 Written by #{author}
    p= article.body
    if user
        if user.id == article.author
            hr
            a.btn.btn-success(href='/articles/edit/'+article._id) Edit
            a.btn.btn-danger.delete-article(href="#", data-id=article._id) Delete